@model Dominio.Autor

@using (Html.BeginForm()) {
    @Html.AntiForgeryToken()
    @Html.ValidationSummary(true)

<div class="row">
        <div class="col-lg-6">

            <div class="form-group">
                <label>@Html.LabelFor(model => model.nome_autor)</label>                
                @Html.TextBoxFor(model => model.nome_autor, new { @placeholder = "Insira o nome do Autor", @class="form-control" })
                @Html.ValidationMessageFor(model => model.nome_autor)                
            </div>
        </div>
    </div>

    <br />
    <div class="display-label pull-left">
            <button type="submit" class="btn btn-primary"><i class="fa  fa-save"></i> Salvar</button>
   </div>
   <div class="display-label pull-right">
        @Html.ActionLink(" Listar Autores", "index", "index", new { @class = "btn btn-warning fa fa-arrow-left"})
   </div>
}

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
